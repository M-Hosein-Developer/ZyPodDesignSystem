<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--Button-->
    <style name="Button.Primary.Default" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/primary_default_button_color</item>
        <item name="fontFamily">@font/new_iransans_fa_regular</item>
    </style>

    <style name="Button.Secondary" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/primary_default_button_color</item>
        <item name="backgroundTint">@color/secondary_default_button_color</item>
        <item name="fontFamily">@font/new_iransans_fa_regular</item>
        <item name="strokeWidth">@dimen/stroke_size</item>
        <item name="strokeColor">@color/primary_default_button_color</item>
    </style>

    <style name="Button.Disable.Mode1" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/primary_disable_button_color</item>
        <item name="fontFamily">@font/new_iransans_fa_regular</item>
        <item name="strokeWidth">@dimen/stroke_size</item>
        <item name="strokeColor">@color/primary_disable_button_color</item>
    </style>

    <style name="Button.Disable.Mode2" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/secondary_disable_text_color</item>
        <item name="backgroundTint">@color/secondary_default_button_color</item>
        <item name="fontFamily">@font/new_iransans_fa_regular</item>
        <item name="strokeWidth">@dimen/stroke_size</item>
        <item name="strokeColor">@color/primary_disable_button_color</item>
    </style>

    <style name="Button.Hover" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/primary_default_button_color</item>
        <item name="backgroundTint">@color/primary_hover_button_color</item>
        <item name="fontFamily">@font/new_iransans_fa_regular</item>
        <item name="strokeWidth">@dimen/stroke_size</item>
        <item name="strokeColor">@color/primary_default_button_color</item>
    </style>

    <style name="Button.Primary.Danger" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/primary_danger_button_color</item>
        <item name="fontFamily">@font/new_iransans_fa_regular</item>
    </style>

    <style name="Button.Primary.Success" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/primary_success_button_color</item>
        <item name="fontFamily">@font/new_iransans_fa_regular</item>
    </style>



    <!--Text-->
    <style name="TextView.Title" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="fontFamily">@font/new_iransans_fa_medium</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView.Desc" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="fontFamily">@font/new_iransans_fa_regular</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textStyle">normal</item>
    </style>



    <!--input layouts-->
    <style name="Default.Layout.Input" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="strokeColor">@android:color/transparent</item>
        <item name="boxStrokeColor">@android:color/transparent</item>
        <item name="fontFamily">@font/new_iransans_fa_regular</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/corner_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/corner_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/corner_radius</item>
        <item name="iconTint">@color/focus_input_boarder_color</item>
        <item name="endIconTint">@color/focus_input_boarder_color</item>
        <item name="startIconTint">@color/focus_input_boarder_color</item>
        <item name="chipIconTint">@color/focus_input_boarder_color</item>
        <item name="buttonIconTint">@color/focus_input_boarder_color</item>
        <item name="closeIconTint">@color/focus_input_boarder_color</item>
        <item name="checkedIconTint">@color/focus_input_boarder_color</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="errorTextColor">@color/error_input_color</item>
    </style>

    <!--default focus style-->
    <style name="Default.EditText.Input" parent="Widget.Material3.TextInputEditText.OutlinedBox">
        <item name="android:layoutDirection">rtl</item>
        <item name="android:textDirection">rtl</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:gravity">start</item>
        <item name="strokeColor">@android:color/transparent</item>
        <item name="boxStrokeColor">@android:color/transparent</item>
        <item name="android:background">@drawable/focus_input_background</item>
        <item name="fontFamily">@font/new_iransans_fa_regular</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/corner_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/corner_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/corner_radius</item>
    </style>

    <!--error style-->
    <style name="Error.EditText.Input" parent="Widget.Material3.TextInputEditText.OutlinedBox">
        <item name="android:layoutDirection">rtl</item>
        <item name="android:textDirection">rtl</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:gravity">start</item>
        <item name="android:background">@drawable/error_input_background</item>
        <item name="fontFamily">@font/new_iransans_fa_regular</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/corner_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/corner_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/corner_radius</item>
    </style>

    <!--success style-->
    <style name="Success.EditText.Input" parent="Widget.Material3.TextInputEditText.OutlinedBox">
        <item name="android:layoutDirection">rtl</item>
        <item name="android:textDirection">rtl</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:gravity">start</item>
        <item name="android:background">@drawable/success_input_background</item>
        <item name="fontFamily">@font/new_iransans_fa_regular</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/corner_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/corner_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/corner_radius</item>
    </style>


    <!--Checkbox-->
    <style name="Default.Checkbox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="buttonIconTint">@color/default_input_color</item>
        <item name="buttonTint">@color/focus_input_boarder_color</item>
    </style>

    <style name="Error.Checkbox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="buttonIconTint">@color/default_input_color</item>
        <item name="buttonTint">@color/error_input_color</item>
    </style>

    <style name="Success.Checkbox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="buttonIconTint">@color/default_input_color</item>
        <item name="buttonTint">@color/primary_success_button_color</item>
    </style>

    <style name="Disable.Checkbox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="buttonIconTint">@color/default_input_color</item>
        <item name="buttonTint">@color/disable_color</item>
    </style>


</resources>