    <style name="SuccessEditTextInput" >
        <item name="boxStrokeColor">@color/primary_success_button_color</item>
        <item name="fontFamily">@font/new_iransans_fa_regular</item>
        <item name="boxBackgroundColor">@color/default_input_color</item>
