        <item name="errorTextColor">@color/error_input_color</item>
        <item name="hintTextColor">@color/primary_success_button_color</item>
        <item name="counterEnabled">true</item>
        <item name="counterMaxLength">10</item>
        <item name="boxStrokeErrorColor">@color/error_input_color</item>
    </style>


    <!--Checkbox-->
