<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="#ffffff"/>
            <corners android:topRightRadius="@dimen/corner_radius_20dp"
                android:topLeftRadius="@dimen/corner_radius_20dp"/>
        </shape>
    </item>
    <item android:right="-2dp" android:left="-2dp" android:top="2dp" android:bottom="-5dp">
        <shape>
            <solid android:color="#CFFFFFFF"/>
            <stroke android:color="@color/focus_input_color" android:width="2dp"/>
            <corners android:topRightRadius="@dimen/corner_radius_20dp"
                android:topLeftRadius="@dimen/corner_radius_20dp"/>
        </shape>
    </item>
    <item android:right="-2dp" android:left="-2dp" android:top="3dp" android:bottom="-5dp">
        <shape>
            <solid android:color="@android:color/white"/>
            <stroke android:color="#ABD0E0FD" android:width="2dp"/>
            <corners android:topRightRadius="@dimen/corner_radius_20dp"
                android:topLeftRadius="@dimen/corner_radius_20dp"/>
        </shape>
    </item>
    <item android:right="-2dp" android:left="-2dp" android:top="4dp" android:bottom="-5dp">
        <shape>
            <solid android:color="@android:color/white"/>
            <stroke android:color="#BED0E0FD" android:width="2dp"/>
            <corners android:topRightRadius="@dimen/corner_radius_20dp"
                android:topLeftRadius="@dimen/corner_radius_20dp"/>
        </shape>
    </item>
</layer-list>