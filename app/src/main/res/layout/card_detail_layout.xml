<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp">

        <TextView
            android:id="@+id/txt_title"
            style="@style/TextView.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/checkbox"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_view_1"
            style="@style/CardStyle"
            android:layout_width="312dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_title">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="12dp">


                <TextView
                    android:id="@+id/txt_price"
                    style="@style/LargeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="5,000 تومان"
                    android:textColor="@color/black_transparent_text_color"
                    app:layout_constraintEnd_toStartOf="@+id/wallet_balance"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <TextView
                    android:id="@+id/wallet_balance"
                    style="@style/NormalTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="موجودی کیف پول: "
                    android:textColor="@color/secondary_disable_text_color"
                    app:layout_constraintBottom_toBottomOf="@+id/txt_price"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/txt_price"
                    app:layout_constraintTop_toTopOf="@+id/txt_price"
                    app:layout_constraintVertical_bias="1.0" />

                <ImageView
                    android:id="@+id/img_profile_1"
                    style="@style/ProfileImageViewStyle"
                    android:layout_width="@dimen/profile_imageview_size"
                    android:layout_height="@dimen/profile_imageview_size"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/profile_1"
                    app:layout_constraintEnd_toStartOf="@+id/imageView"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt_price" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:src="@drawable/arrow_icon"
                    app:layout_constraintBottom_toBottomOf="@+id/img_profile_1"
                    app:layout_constraintDimensionRatio="2:3"
                    app:layout_constraintEnd_toStartOf="@+id/img_profile_2"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/img_profile_1"
                    app:layout_constraintTop_toTopOf="@+id/img_profile_1" />

                <ImageView
                    android:id="@+id/img_profile_2"
                    style="@style/ProfileImageViewStyle"
                    android:layout_width="@dimen/profile_imageview_size"
                    android:layout_height="@dimen/profile_imageview_size"
                    android:src="@drawable/profile_2"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/imageView"
                    app:layout_constraintTop_toTopOf="@+id/imageView" />


                <TextView
                    android:id="@+id/txt_profile_1"
                    style="@style/NormalTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="رادین کریمی"
                    app:layout_constraintEnd_toEndOf="@+id/img_profile_1"
                    app:layout_constraintStart_toStartOf="@+id/img_profile_1"
                    app:layout_constraintTop_toBottomOf="@+id/img_profile_1" />


                <TextView
                    android:id="@+id/txt_profile_2"
                    style="@style/NormalTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="کیف پول"
                    app:layout_constraintEnd_toEndOf="@+id/img_profile_2"
                    app:layout_constraintStart_toStartOf="@+id/img_profile_2"
                    app:layout_constraintTop_toBottomOf="@+id/img_profile_2" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </com.google.android.material.card.MaterialCardView>


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_view_2"
            style="@style/CardStyle"
            android:layout_width="312dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/card_view_1">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="12dp">


                <ImageView
                    android:id="@+id/img_profile_1_2"
                    style="@style/ProfileImageViewStyle"
                    android:layout_width="@dimen/profile_imageview_size"
                    android:layout_height="@dimen/profile_imageview_size"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/profile_1"
                    app:layout_constraintEnd_toStartOf="@+id/imageView_2"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/imageView_2"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:src="@drawable/arrow_icon"
                    app:layout_constraintBottom_toBottomOf="@+id/img_profile_1_2"
                    app:layout_constraintDimensionRatio="2:3"
                    app:layout_constraintEnd_toStartOf="@+id/img_profile_2_2"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/img_profile_1_2"
                    app:layout_constraintTop_toTopOf="@+id/img_profile_1_2" />

                <ImageView
                    android:id="@+id/img_profile_2_2"
                    style="@style/ProfileImageViewStyle"
                    android:layout_width="@dimen/profile_imageview_size"
                    android:layout_height="@dimen/profile_imageview_size"
                    android:src="@drawable/profile_2"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView_2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/imageView_2"
                    app:layout_constraintTop_toTopOf="@+id/imageView_2" />


                <TextView
                    android:id="@+id/txt_profile_1_2"
                    style="@style/NormalTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="رادین کریمی"
                    app:layout_constraintEnd_toEndOf="@+id/img_profile_1_2"
                    app:layout_constraintStart_toStartOf="@+id/img_profile_1_2"
                    app:layout_constraintTop_toBottomOf="@+id/img_profile_1_2" />


                <TextView
                    android:id="@+id/txt_profile_2_2"
                    style="@style/NormalTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="کیف پول"
                    app:layout_constraintEnd_toEndOf="@+id/img_profile_2_2"
                    app:layout_constraintStart_toStartOf="@+id/img_profile_2_2"
                    app:layout_constraintTop_toBottomOf="@+id/img_profile_2_2" />


                <Button
                    style="@style/Button.Hover"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="مبلغ: 100,000 تومان"
                    android:textColor="@color/gray_text_button"
                    app:layout_constraintEnd_toEndOf="@+id/img_profile_2_2"
                    app:layout_constraintStart_toStartOf="@+id/img_profile_1_2"
                    app:layout_constraintTop_toBottomOf="@+id/txt_profile_1_2" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </com.google.android.material.card.MaterialCardView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="312dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/card_view_2">


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_view_2_2"
                style="@style/CardWalletStyle"
                android:layout_width="312dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">


                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_end="92dp" />


                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintGuide_begin="45dp" />


                    <TextView
                        style="@style/NormalTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="پول توجیبی بابا"
                        app:layout_constraintBottom_toTopOf="@+id/guideline2"
                        app:layout_constraintEnd_toStartOf="@+id/guideline" />


                    <View
                        android:id="@+id/view_1"
                        android:layout_width="1dp"
                        android:layout_height="0dp"
                        android:background="@color/disable_color"
                        app:layout_constraintBottom_toBottomOf="@+id/price_wallet_1"
                        app:layout_constraintEnd_toStartOf="@+id/price_wallet"
                        app:layout_constraintStart_toEndOf="@+id/price_time"
                        app:layout_constraintTop_toTopOf="@+id/price_wallet" />

                    <TextView
                        android:id="@+id/price_wallet"
                        style="@style/NormalTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="مبلغ پول توجیبی"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/view_1"
                        app:layout_constraintTop_toTopOf="@+id/guideline2" />

                    <View
                        android:id="@+id/view_2"
                        android:layout_width="1dp"
                        android:layout_height="0dp"
                        android:background="@color/disable_color"
                        app:layout_constraintBottom_toBottomOf="@+id/price_time_1"
                        app:layout_constraintEnd_toStartOf="@+id/price_time"
                        app:layout_constraintStart_toEndOf="@+id/price_bill"
                        app:layout_constraintTop_toTopOf="@+id/price_time" />

                    <TextView
                        android:id="@+id/price_bill"
                        style="@style/NormalTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="مدت قرارداد"
                        app:layout_constraintEnd_toStartOf="@+id/view_2"
                        app:layout_constraintHorizontal_chainStyle="spread"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/view_2" />

                    <TextView
                        android:id="@+id/price_time"
                        style="@style/NormalTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="دوره پرداخت"
                        app:layout_constraintEnd_toStartOf="@+id/view_1"
                        app:layout_constraintStart_toEndOf="@+id/view_2"
                        app:layout_constraintTop_toTopOf="@+id/view_1" />

                    <TextView
                        android:id="@+id/price_bill_1"
                        style="@style/LargeTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="6 ماه"
                        android:textColor="@color/focus_input_boarder_color"
                        app:layout_constraintEnd_toEndOf="@+id/price_bill"
                        app:layout_constraintStart_toStartOf="@+id/price_bill"
                        app:layout_constraintTop_toBottomOf="@+id/price_bill" />

                    <TextView
                        android:id="@+id/price_wallet_1"
                        style="@style/LargeTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="۱۰۰,0۰۰ تومان"
                        android:textColor="@color/focus_input_boarder_color"
                        app:layout_constraintEnd_toEndOf="@+id/price_wallet"
                        app:layout_constraintStart_toStartOf="@+id/price_wallet"
                        app:layout_constraintTop_toBottomOf="@+id/price_wallet" />

                    <TextView
                        android:id="@+id/price_time_1"
                        style="@style/LargeTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="هفتگی"
                        android:textColor="@color/focus_input_boarder_color"
                        app:layout_constraintEnd_toEndOf="@+id/price_time"
                        app:layout_constraintStart_toStartOf="@+id/price_time"
                        app:layout_constraintTop_toBottomOf="@+id/price_time" />


                    <TextView
                        android:id="@+id/detail_payment"
                        style="@style/NormalTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="22dp"
                        android:text="جزییات پرداختی‌ها"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/imageView2"
                        app:layout_constraintTop_toBottomOf="@+id/view_1" />

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="4dp"
                        android:layout_marginBottom="3dp"
                        android:src="@drawable/blue_arrow"
                        app:layout_constraintBottom_toBottomOf="@+id/detail_payment"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintEnd_toStartOf="@+id/detail_payment"
                        app:layout_constraintHorizontal_chainStyle="packed"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/detail_payment" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <ImageView
                android:id="@+id/img_profile_1_2_2"
                style="@style/ProfileImageViewStyle"
                android:layout_width="@dimen/profile_imageview_size"
                android:layout_height="@dimen/profile_imageview_size"
                android:layout_marginEnd="8dp"
                android:src="@drawable/profile_3"
                app:layout_constraintBottom_toTopOf="@id/card_view_2_2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/card_view_2_2" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>