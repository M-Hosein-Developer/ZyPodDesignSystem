                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="۱۰۰,0۰۰ تومان"
                        android:textColor="@color/focus_input_boarder_color"
                        app:layout_constraintEnd_toEndOf="@+id/price_wallet"
                        app:layout_constraintStart_toStartOf="@+id/price_wallet"
                        app:layout_constraintTop_toBottomOf="@+id/price_wallet" />

                    <TextView
